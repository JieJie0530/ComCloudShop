
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>找回密码</title>
    <link href="~/public/css/style.css" rel="stylesheet" />
    <script src="~/public/js/jquery.min.js"></script>
</head>
<body>
    <div class="page_all">
        <div class="page m3">
            <div class="mainbox">
                <div class="ui-line25"></div>
                <div class="ui-itembox">
                    <div class="ui-item">
                        <div class="tit">手机号</div>
                        <div class="inp"><input type="text" id="Phone" placeholder="输入手机号"></div>
                        <div class="btn"><a onclick="get_mobile_code()" isdj="1" id="zphone">获取验证码</a></div>
                    </div>
                    <div class="ui-item">
                        <div class="tit">验证码</div>
                        <div class="inp"><input type="text" id="vel1" placeholder="输入短信验证码"></div>
                    </div>
                </div>
                <div class="ui-line25"></div>
                <div class="ui-itembox">
                    <div class="ui-item">
                        <div class="tit">新密码</div>
                        <div class="inp"><input type="password"  id="Pwd" placeholder="输入密码"></div>
                    </div>
                    <div class="ui-item">
                        <div class="tit">确认密码</div>
                        <div class="inp"><input type="password"  id="Pwd1" placeholder="确认密码"></div>
                    </div>
                </div>
                <div class="ui-line25"></div>

                <div id="QD" class="ui-btn b-black"><a id="btn_reg">找回密码</a></div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            
            $("#btn_reg").click(function () {

                    var Phone = $("#Phone").val();//手机号
                    var Pwd = $("#Pwd").val();
                    var Pwd1 = $("#Pwd1").val();//推荐人手机号
                    var vel1 = $("#vel1").val();//验证码

                    if (Phone == "") {
                        alert("请填写手机号!");
                    }
                    else if (vel1 == "") {
                        alert("请填写验证码!");
                    }
                    else if (Pwd == "") {
                        alert("请填写密码!");
                    }
                    else if (Pwd1 != Pwd) {
                        alert("两次输入密码不一样!");
                    }
                    else {
                        var parm = {
                            Phone: Phone,
                            Pwd: Pwd,
                            Pwd1: Pwd1,
                            vel1: vel1
                        }
                       $.ajax({
                           type: 'post',
                           async: false,
                            url: '@Url.Content("~/User/Finds")',
                            data: parm,
                            success: function (data) {
                                if (data == "ok") {
                                    alert("成功找回密码!");
                                    window.location.href = "/User/Login";
                                }
                                else {
                                    alert(data)
                                }
                            }
                        })
                    }

            })
        });
        var iTime = 59;
        var Account;
        function RemainTime() {
            document.getElementById('zphone').disabled = true;
            var iSecond, sSecond = "", sTime = "";
            if (iTime >= 0) {
                iSecond = parseInt(iTime % 60);
                iMinute = parseInt(iTime / 60)
                if (iSecond >= 0) {
                    if (iMinute > 0) {
                        sSecond = iMinute + "分" + iSecond + "秒";
                    } else {
                        sSecond = iSecond + "秒";
                    }
                }
                sTime = sSecond;
                if (iTime == 0) {
                    clearTimeout(Account);
                    sTime = '获取手机验证码';
                    iTime = 59;
                    $("#zphone").attr("isdj", "1");
                    document.getElementById('zphone').disabled = false;
                } else {
                    Account = setTimeout("RemainTime()", 1000);
                    iTime = iTime - 1;
                }
            } else {
                sTime = '没有倒计时';
            }
            $('#zphone').text(sTime);
        }

        function get_mobile_code() {
            var dj = $("#zphone").attr("isdj");
            if (dj == "1") {
                $("#zphone").attr("isdj", "0");
                var phone = $("#Phone").val();

                var partten = /^1[3,8,7,5,8]\d{9}$/;
                if (phone == "") {
                    alert("请输入手机号！");
                    $("#zphone").attr("isdj", "1");
                }
                else if (!partten.test(phone)) {
                    alert("请输入正确格式手机号码！");
                    $("#zphone").attr("isdj", "1");
                }
                else {
                    $.post('@Url.Content("~/Home/SendMsm")', { mobile: phone}, function (msg) {

                        if (msg == "ok") {
                            RemainTime();
                        }
                        else {
                            alert("失败");
                        }
                    });
                }
            }

        };
    </script>
</body>
</html>
