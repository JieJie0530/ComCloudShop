<div class="container container2">
    <div class="top_tips" style="background: #e23b6b;">
        申请退货
    </div>
    <section  class="formbox">
        <div class="item">
            <h2><b class="warning">*</b>真实姓名:</h2>
            <input class="w5" type="text" name="" id="TrueName" placeholder="输入真实姓名">
        </div>
        <div class="item">
            <h2><b class="warning">*</b>联系手机:</h2>
            <input class="w5" type="tel" name="" id="Phone" placeholder="请输入您的手机号">
        </div>
        <div class="item hiditem">
            <h2><b class="warning">*</b>开户银行:</h2>
            <input class="w5" type="text" name="" id="Bank" placeholder="请输入开户银行全称 （支行）">
        </div>
        <div class="item">
            <h2 class="htitle"><b class="warning">*</b>银行卡号:</h2>
            <input class="w5" type="tel" name="" id="txtNumber" placeholder="请输入银行卡号">
        </div>
    </section>
    <div class="demo">
        <div class="pleare">
            <textarea id="txt_pl" placeholder="亲，写上您的退货理由！"></textarea>
        </div>
    </div>
    <div style=" clear:both;"></div>
    <div>
        <a class="see" id="couponsubmit">提交</a>
    </div>


    <script type="text/javascript">
        $("body").attr("id", "reg");
        $("#couponsubmit").click(function () {
            var Number = $("#txtNumber").val();
            var TrueName = $("#TrueName").val();
            var Bank = $("#Bank").val();
            var Phone = $("#Phone").val();
            var txt_pl = $("#txt_pl").val();

            if (TrueName == "") {
                alert("请填写真实姓名！");
                return false;
            }
            else if (Phone == "") {
                alert("手机号码格式错误！");
                return false;
            }
            else if (Number == "") {
                alert("到帐帐号不能为空!");
            }
            else if (Bank == "") {
                alert("开户银行不能为空！");
            }
            else if (txt_pl.length <= 10) {
              alert("退货理由不能少于10个字！");
            }
            else {

                var wxdata = {
                    "OrderNum":@Convert.ToString(Model.OrderNum),
                    "ProductID":@Convert.ToString(ViewData["ProductID"]),
                    "MemberID":@Convert.ToInt32(ViewData["MemberID"]),
                    "Reason":txt_pl,
                    "TrueName":TrueName,
                    "Bank":Bank,
                    "Phone":Phone,
                    "Number":Number

                }
                $.ajax({
                    type: 'post',
                    url: '@(Url.Content("~/Order/AddReturn"))',
                    data: wxdata,
                    success:function(data){
                        if (data == "ok") {
                            alert("申请成功！");
                            window.location.href="/Order/List";
                        }
                        else {
                            alert("评论失败！");
                        }
                    }
                })
            }
        })
    </script>

