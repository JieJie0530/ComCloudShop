    <script type="text/javascript">
        $(function () {
            $("#Fwxy").click(function () {
                $("#FW").addClass("lshow");
            });
            $('#FW').on('click', function (event) {
                if ($(event.target).is('#ClossFW')) {
                    event.preventDefault();
                    $(this).removeClass('lshow');
                }
            });
        });

        function addService() {
            var txt = $("#go").text();
            if (txt == "注册") {


                var Phone = $("#Phone").val();//手机号
                var Pwd = $("#Pwd").val();
                var TJPhone = $("#TJPhone").val();//推荐人手机号
                var vel1 = $("#vel1").val();//验证码
                if (Phone == "") {
                    alert("请填写手机号!");
                }
                else if (vel1 == "") {
                    alert("请填写验证码!");
                }
                else if (Pwd == "") {
                    alert("请填写密码!");
                }
                else {
                    $("#go").val("提交中");
                    var parm = {

                        Phone: Phone,
                        Pwd: Pwd,
                        TJPhone: TJPhone,
                        vel1: vel1
                    }

                    $.ajax({
                        type: 'post',
                        url: '@Url.Content("~/User/Regs")',
                        data: parm,
                        success: function (data) {
                            if (data == "ok") {
                                alert("注册成功!");

                            }
                            else {
                                alert(data)
                            }
                        }
                    })
                }
            }
            else {
                alert("提交中！")
            }

        }

    </script>

