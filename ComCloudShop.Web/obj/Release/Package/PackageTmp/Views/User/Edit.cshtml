
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_NoNavLayout.cshtml";
}
@model UserEditInfoViewModel
<style>
    .editInfobox li {
        position: relative;
    }

        .editInfobox li .btspan {
            position: absolute;
            right: 10px;
            top: 5px;
            color: red;
            text-indent: 99%;
            padding-right: 10px;
            display: -webkit-inline-box;
        }
</style>
<div class="wrapper">
    @*<div class="logo-top">
        <img src="~/public/images/logo.png" alt="">
    </div>*@
    <div class="editInfo">
        <form action="~/User/Edit" method="post" id="commentForm" onsubmit="return check()">
            <input type="hidden" name="MemberId" value="@Model.MemberId" />
            <div class="error"></div>
            <ul class="editInfobox">
                <li><span>真实姓名</span><div class="editInput"><input type="text" name="Name" id="Name" minlength="2" value="@Model.Name"></div><span class="btspan" style="color:red">*</span></li>
                <li><span>手机号码</span><div class="editInput"><input type="tel" name="Mobile" id="Mobile" maxlength="11" minlength="11" value="@Model.Mobile"></div><span class="btspan" style="color:red">*</span></li>
                <li style="display:none;"><span>邮&emsp;&emsp;箱</span><div class="editInput"><input type="email" name="Email" id="Email" value="@Model.Email"></div></li>
                <li style="display:none;"><span>Q&emsp;&emsp;Q</span><div class="editInput"><input type="text" name="QQ" id="QQ" value="@Model.QQ"></div></li>
                <li><span>出生年月</span><div class="editInput"><input type="date" name="Birthday" id="Birthday" value="@Model.Birthday"></div></li>
                <li>
                    <span>省&emsp;&emsp;份</span>
                    <div class="editInput">
                        <select id="province" name="Province" class="selectInput"></select>
                    </div>
                    <span class="btspan" style="color:red">*</span>
                </li>
                <li>
                    <span>市&emsp;&emsp;区</span>
                    <div class="editInput">
                        <select id="city" name="City" class="selectInput"></select>
                    </div>
                    <span class="btspan" style="color:red">*</span>
                </li>
                <li>
                    <span>区&ensp;/&ensp;县</span>
                    <div class="editInput">
                        <select id="district" name="District" class="selectInput"></select>
                    </div>
                    <span class="btspan" style="color:red">*</span>
                </li>
                <li><span>详细地址</span><div class="editInput"><input type="text" name="Address" id="Address" value="@Model.Address"></div><span class="btspan" style="color:red">*</span></li>
            </ul>
            <input type="submit" class="infoBtn" value="保存">
        </form>
    </div>
</div>

<script src="~/public/js/area.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {

        _init_area();

        $('#province').on('onchange', function () {
            //$('#show').innerHTML = "<h3>省" + $('province').value + " - 市" +
            $('#city').value + " - 县/区" +
            $('#district').value + "</h3>"
        });

        if ("@Model.Province" != "") {
            $("#province").val("@Model.Province");
            change(1);
            $('#city').val('@Model.City');
            change(2);
            $('#district').val('@Model.District');
        }

    });

    function check() {
        if ($('#Name').val() == "" || $('#Mobile').val() == "" || $('#Birthday').val() == "" || $('#province').val() == "" || $('#city').val() == "" || $('#district').val() == "" || $('#Address').val() == "") {
            alert('请填写相关信息!');
            return false;
        }
    }

</script>

