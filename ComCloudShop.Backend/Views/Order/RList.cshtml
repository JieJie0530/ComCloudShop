                            m.UserName(data.result.UserName);

                        } else {
                            alert('系统错误！');
                        }
                    });
                }
                $("#dialog").dialog({ width: "900px" });
            };*@

            //关闭
            //m.CloseDialog = function () {
            //    $("#dialog").dialog('close');
            //};

            //加载表单数据
            m.loadData = function (page) {
                var url = "@Url.Content("~/Order/listR?page=")" + page + "&nickName=&State=" + $("#search_sel").val();
                $.ajax({
                    method: "get",
                    url: url,
                    async: false,
                    dataType: 'json'
                }).done(function (data) {
                    if (data.error == 100) {
                        m.total(data.total);
                        m.page_total(Math.ceil(data.total / m.size));
                        m.page_current(page);
                        m.array(data.result);
                    } else {
                        alert("Get Data Error");
                    }

                });
            };
        };

        //初始化数据
        var obj = new model();
        obj.loadData(1);
        ko.applyBindings(obj);

    });

</script>

