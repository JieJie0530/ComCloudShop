@{
    ViewBag.Title = "后台首页";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<div class="main-wrap">
    <div class="crumb-wrap">
        <div class="crumb-list"><i class="icon-font">&#xe06b;</i><span>欢迎登录后台管理系统</span></div>
    </div>
    <div class="result-wrap">
        <div class="result-title">
            <h1>系统基本信息</h1>
        </div>
        <div class="result-content">
            <ul class="sys-info-list">
                <li>
                    <label class="res-lab">操作系统</label><span class="res-info">Windows Server 2008 r2 及以上</span>
                </li>
                <li>
                    <label class="res-lab">运行环境</label><span class="res-info">IIS7.0，SQL2012</span>
                </li>
                <li>
                    <label class="res-lab">上传附件限制</label><span class="res-info">XXXXXX</span>
                </li>
                <li>
                    <label class="res-lab">北京时间</label><span class="res-info">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</span>
                </li>
                <li>
                    <label class="res-lab">服务器域名/IP</label><span class="res-info">XXXXXX</span>
                </li>
                <li>
                    <label class="res-lab">Host</label><span class="res-info">XXXXXX</span>
                </li>
            </ul>
        </div>
    </div>
</div>


