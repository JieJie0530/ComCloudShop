@{
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
@model ComCloudShop.ViewModel.SetSupViewModel


<div class="main-wrap">
    <div class="crumb-wrap">
        <div class="crumb-list">
            <i class="icon-font"></i>
            <a href="~/">后台管理</a>
            <span class="crumb-step">&gt;</span>
            <span class="crumb-name">积分比例设置</span>
        </div>
    </div>
    <div class="result-wrap">
        <div class="result-title">
            <div class="result-list">
                <table class="search-tab" width="100%">
                    <tbody>
                        <tr>
                            <th width="15%" height="50">积分比例设置：</th>
                            <td width="35%">
                                <input type="text" class="common-text required" size="20" value="@Model.SetBL" name="amount" id="amount">
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" height="50" style="text-align :center">
                                <input type="button" class="btn btn-primary btn6 mr10" id="btnSubmit" value="保 存" />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="result-content">
        </div>

    </div>
</div>

