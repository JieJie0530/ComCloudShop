<script type="text/javascript">
    $("#btnSubmit").click(function () {
        var bl = $("#amount").val();

        $.ajax({
            async: false,
            type: "get",
            url: '@Url.Content("/SetSup/Edit/?id=")' + bl,
            dataType: 'text',
            success: function (data) {
                if (data == "ok") {
                    alert("保存成功！")
                }
                else {
