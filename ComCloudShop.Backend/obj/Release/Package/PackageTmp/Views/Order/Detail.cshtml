@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ComCloudShop.ViewModel;
@model  IEnumerable<OrderDetailResultModel>
<div class="rrcc" id="RightBox">
    <div class="center"></div>
    <div class="right" id="li010">
        <div class="right01">
            <img src="~/Content/images/04.gif" alt="" />
            后台管理 &gt; <span>订单详情</span>
        </div>
        <div id="example" class="k-content" style="padding: 2px;">
            @if (Model.Count() == 0) 
            {
                <div>没有数据</div>
            }else 
            {
                <ul>
                    <li style="padding: 10px;">订单编号：@Model.First().OrderNum
                    </li>
                    <li style="padding: 10px;">收货人：@Model.First().UserName
                    </li>
                    <li style="padding: 10px;">收货地址：@Model.First().Address
                    </li>
                    <li style="padding: 10px;">实付金额：@Model.First().PayableAmount
                    </li>
                    <li style="padding: 10px;">实际运费：@Model.First().AcutalCarriage
                    </li>
                    <li style="padding: 10px;">
                        发票： @(string.IsNullOrEmpty(Model.First().ReceiptType)?string.Empty:(Model.First().ReceiptType=="1"?"个人":"公司"))
                    </li>
                    <li style="padding: 10px;">发票抬头： @Model.First().Receipt
                    </li>
                    <li style="padding: 10px;">ERP订单编号：@Model.First().ErpOrderId
                    </li>
                    <li style="padding: 10px;">物流编号：  <a href="http://www.kuaidi100.com/all/yd.shtml" target="_blank" style="color: #ff0000">查询物流</a>
                    </li>
                    <li style="padding: 10px;">购买的产品：
                    <table border="1" cellspacing="0" cellpadding="0">
                        <tr>
                            <th>产品名称</th>
                            <th>价格</th>
                            <th>数量</th>
                        </tr>

                        @foreach (var q in Model)
                    {
                            <tr>
                                <td>@q.SPMC</td>
                                <td>@(q.Sale.ToString()+"元")</td>
                                <td>@q.BuyNum</td>
                            </tr>
                    }
                    </table>
                    </li>
                </ul>
            }
        </div>
    </div>
</div>


<script type="text/javascript">

</script>
