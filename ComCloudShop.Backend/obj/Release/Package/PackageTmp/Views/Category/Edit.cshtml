@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ComCloudShop.ViewModel.CategoryViewModel
<div class="rrcc" id="RightBox">
    <div class="center"></div>
    <div class="right" id="li010">
        <div class="right01">
            <img src="~/Content/images/04.gif" alt="" />
            后台管理 &gt; <span>@(ViewData["name"]+"管理")</span>
        </div>
        <div id="example" class="k-content" style="padding: 2px;">
            @using (Html.BeginForm()) 
            {
               <input type="hidden" name="CategoryId" value="@Model.CategoryId">
                <input type="hidden" name="CategoryType" value="@ViewData["status"]">
                <ul>
                    <li style="padding: 10px;">
                       @(ViewData["name"]+"名称")：<input   type="text"  name="CategoryName"  style="width: 350px"  value="@Model.CategoryName"  />
                    </li>
                </ul>
                <div style="padding-left: 47px;">
                    <input type="submit" value="保存" id="btnSubmit" />
                    <input type="button" value="返回" id="btnReset" />
                </div>
            }
            
        </div>
    </div>
</div>


<script type="text/javascript">

    $(function(){
        $("#btnSubmit,#btnReset").kendoButton();

        $("#btnReset").click(function(){
            location.href = "@Url.Content("~/category/index/?status=")"+@ViewData["status"];
        });

    })
</script>

