@using ComCloudShop.Utility;
<!doctyrepe html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <title>后台管理</title>
    <link rel="stylesheet" href="~/Content/styles/kendo.common.min.css">
    <link rel="stylesheet" href="~/Content/styles/kendo.rtl.min.css">
    <link rel="stylesheet" href="~/Content/styles/kendo.default.min.css">
    <link rel="stylesheet" href="~/Content/site.css">
    <script src="~/Scripts/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/kendo.ui/kendo.web.min.js" type="text/javascript"></script>
    <script src="~/Scripts/kendo.ui/cultures/kendo.culture.zh-CN.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        console.log("@HttpContext.Current.Request.Url.AbsoluteUri")
        var router = "@ViewContext.RouteData.Values["controller"]";
        var pageName="@ViewContext.RouteData.Values["action"]";
        console.log(router)
        $(function () {
            kendo.culture("zh-CN");
            $("#window").kendoWindow({
                width: "600px",
                height: "auto",
                title: "编辑",
                actions: [
                    "Minimize",
                    "Maximize",
                    "Close"
                ],
                modal: true,
                visible: false
            });

            $("#dialogTip").kendoWindow({
                width: "350px",
                height: "150px",
                title: "消息框",
                visible: false
            });

            $(".left03_right").click(function () {
                location.href = "@Url.Content("~/account/logout")";
        });

            $("#LeftBox").find("a").each(function () {
                    if ($(this).attr("href").indexOf(pageName) != -1 && $(this).attr("href").indexOf(router) != -1) {
                        $(this).css("color", "blue");
                    }
        });

    });

    </script>
</head>
<body style="margin-top: 0;">
    <div class="header">
        <div class="header03"></div>
        <div class="header01"></div>
        <div class="header02">后台管理系统</div>
    </div>
    <div class="left" id="LeftBox">
        <div class="left01">
            <div class="left01_right"></div>
            <div class="left01_left"></div>
            <div class="left01_c">欢迎您：@if (Session[AppConstant.admin] != null) { @Session[AppConstant.admin].ToString(); }</div>
        </div>
        <div class="left02">
            <div class="left02top">
                <div class="left02top_right"></div>
                <div class="left02top_left"></div>
                <div class="left02top_c">后台管理</div>
            </div>
            <div class="left02down">
                <div class="left02down01">
                    <a href="@Url.Content("~/sale/index")">
                        <div class="left02down01_img"></div>
                        活动管理
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/groups/index")">
                        <div  class="left02down01_img"></div>
                        套餐管理
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/category/index/?status=1")">
                        <div  class="left02down01_img"></div>
                        品种功能管理
                    </a>

                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/rule/index")">
                        <div  class="left02down01_img"></div>
                        优惠管理
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/system/index")">
                        <div  class="left02down01_img"></div>
                        首页图片管理
                    </a>
                </div>
            </div>
            <div class="left02down">
                <div class="left02down01" >
                    <a href="@Url.Content("~/user/index")">
                        <div  class="left02down01_img"></div>
                        用户管理
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/address/index")">
                        <div  class="left02down01_img"></div>
                        地址管理
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/product/index")">
                        <div  class="left02down01_img"></div>
                        产品管理
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/order/index")">
                        <div  class="left02down01_img"></div>
                        订单管理
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/order/erpOrder")">
                        <div class="left02down01_img"></div>
                        Erp订单
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/coupon/index")">
                        <div  class="left02down01_img"></div>
                        用户优惠券管理
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/SetSup/index")">
                        <div class="left02down01_img"></div>
                        积分比例设置
                    </a>
                </div>
            </div>
            <div class="left02down" style="display:none">
                <div class="left02down01">
                    <a href="@Url.Content("~/news/index")">
                        <div class="left02down01_img"></div>
                        图文消息管理
                    </a>
                </div>
                <div class="left02down01">
                    <a href="@Url.Content("~/keyword/index")">
                        <div class="left02down01_img"></div>
                        关键字管理
                    </a>
                </div>
            </div>
        </div>
        <div class="left01">
            <div class="left03_right" style="cursor: pointer"></div>
            <div class="left01_left"></div>
            <div class="left03_c"><a href="@Url.Content("~/account/logout")">安全退出</a></div>
        </div>
    </div>
    @RenderBody()
    <div id="window"></div>
    <div id="dialogTip"></div>
</body>
@*<p class="footer" style="display: none">Page rendered in <strong></strong>seconds</p>*@
</html>
